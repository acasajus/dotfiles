
# Enable history appending instead of overwriting.  #139609
shopt -s histappend

export HISTCONTROL=ignoreboth
export HISTFILE=$HOME/.bash_history
export HISTSIZE=10000
export HISTFILESIZE=10000

export EDITOR=vim

# Bash won't get SIGWINCH if another process is in the foreground.
# Enable checkwinsize so that bash will check the terminal size when
# it regains control.  #65623
# http://cnswww.cns.cwru.edu/~chet/bash/FAQ (E11)
shopt -s checkwinsize

#Color for OSX
export CLICOLOR=1

#Color for gnome terminal
[[ -n "$DISPLAY" && "$COLORTERM" = "gnome-terminal" ]] && export TERM=xterm-256color

# make less more friendly for non-text input files, see lesspipe(1)
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc).
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi
if [[ "$(uname -s)" == "Darwin" ]]; then
  if [ -f /usr/local/bin/brew -a -f $(brew --prefix)/etc/bash_completion ]; then
   source $(brew --prefix)/etc/bash_completion
  fi
fi

#Sanitize PATH
newPATH=""
for entry in $(echo $PATH | sed 's/:/ /g')
do 
  #Remove trailing slash
  entry=$(echo $entry | sed 's:/$::g')
  #Remove /usr/local/bin
  if [ -d "$entry" ]; then
    case "$entry" in
      "/usr/local/bin") 
        ;;
      "$HOME/bin") 
        ;;
      *)
        newPATH="$newPATH:$entry"
        ;;
    esac
  fi
done
export PATH=$(echo $newPATH | sed 's/^://g')

for i in /usr/local/bin /usr/local/sbin
do
	[[ -d $i ]] && export PATH=$i:$PATH
done

#RVM
if [[ -f ~/.rvm/scripts/rvm ]]; then
	source ~/.rvm/scripts/rvm
	[[ -f ~/.rvm/scripts/completion ]] && source ~/.rvm/scripts/completion
fi

#pyenv
if which pyenv 2>&1 >/dev/null; then
	eval "$(pyenv init -)"
else
	[[ -f "$HOME/.pyenv/bin" ]] && ( source "$HOME/.pyenv/bin"; eval "$(pyenv init -)" )
fi

#Set the home bin the first one
for i in "$HOME/bin"
do
	[[ -d $i ]] && export PATH=$i:$PATH
done
